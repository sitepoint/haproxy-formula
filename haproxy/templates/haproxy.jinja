      {%- if listener[1].bind[1] is defined and listener[1].bind[1]|length > 1 -%}
        {%- for socket in listener[1].bind %}
    bind {{ socket }}
        {%- endfor -%}
      {%- elif listener[1].bind[0]|length > 1 %}
    bind {{ listener[1].bind[0] }}
      {%- else %}
    bind {{ listener[1].bind }}
      {%- endif -%}
    {%- endif -%}
